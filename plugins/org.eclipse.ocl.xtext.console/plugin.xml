<plugin>
	<extension point="org.eclipse.ui.commands">
		<command id="org.eclipse.ocl.xtext.console.ShowXtextConsoleAction"
			description="%_UI_ShowXtextOCLConsole_tooltip"			
			name="%_UI_ShowXtextOCLConsole_label"/>
	</extension>

	<extension point="org.eclipse.ui.handlers">
		<handler commandId="org.eclipse.ocl.xtext.console.ShowXtextConsoleAction"
			class="org.eclipse.ocl.xtext.console.actions.ShowConsoleHandler"/>
	</extension>

	<extension point="org.eclipse.ui.menus">
		<!-- Platform Issue 2483 raised for inability to use after show -->
		<menuContribution locationURI="popup:org.eclipse.ocl.examples.ui.Menu?after=load">
			<command commandId="org.eclipse.ocl.xtext.console.ShowXtextConsoleAction"
				style="push"
				icon="icons/elcl16/oclconsole_co.gif"
				tooltip="%_UI_ShowXtextOCLConsole_tooltip">
				<visibleWhen checkEnabled="false">
					<test property="org.eclipse.ocl.examples.ui.resourceSetAvailable" forcePluginActivation="true"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
   
   <extension point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            label="%_UI_ConsoleFactory_label"
            class="org.eclipse.ocl.xtext.console.OCLConsoleFactory"
            icon="$nl$/icons/elcl16/oclconsole_co.gif">
      </consoleFactory>
   </extension>

  <!--extension point = "org.eclipse.emf.edit.ui.queryDelegateTextViewerFactories">
     <factory
           uri = "http://www.eclipse.org/emf/2002/Ecore/OCL/Pivot"
           class = "org.eclipse.ocl.xtext.console.delegate.OCLQueryDelegateTextViewerFactory" />
  </extension-->
  
  <extension point="org.eclipse.ui.contexts">
    <context
          id="org.eclipse.ocl.xtext.console.xtext.embededxtextEditor.context"
          name="Embedded Essential OCL Xtext Editor"
          parentId="org.eclipse.ui.contexts.window">
    </context>
  </extension>
</plugin>
