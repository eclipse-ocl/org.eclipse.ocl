	<!-- OCL->Debug action -->
	<extension point="org.eclipse.ui.handlers">
		<handler commandId="org.eclipse.ocl.debug.ui.DebugHandler"
			class="org.eclipse.ocl.debug.ui.actions.DebugHandler"/>
	</extension>
	<extension point="org.eclipse.ui.commands">
		<command id="org.eclipse.ocl.debug.ui.DebugHandler"
			description="%MF_Debug_tooltip"
			name="%MF_Debug_label">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<!-- Platform Issue 2483 raised for inability to use after show -->
		<menuContribution locationURI="popup:org.eclipse.ocl.examples.ui.Menu?after=load">
			<command commandId="org.eclipse.ocl.debug.ui.DebugHandler"
				label="%MF_Debug_label"
				icon="icons/debug_exc.gif"
				style="push"
				tooltip="%MF_Debug_tooltip">
				<visibleWhen checkEnabled="false">
					<test property="org.eclipse.ocl.examples.ui.resourceSetAvailable" forcePluginActivation="true"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>

</plugin>
